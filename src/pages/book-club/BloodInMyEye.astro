---
import '@/css/globals.css'

import Header from '../../layouts/header.astro'
import NavBar from '../../layouts/navbar.astro'
import Footer from '../../layouts/Footer.astro'
---

<Header>
    <NavBar />
        <div class="content">
            <div class="text-center">
                <h1 class="font-heading text-3xl font-bold text-gray-900 mb-2">Blood In My Eye</h1>
                <h3 class="font-heading text-xl font-bold text-gray-900 mb-8 sm:mb-14">By: George L. Jackson</h3>
            </div>
            <div class="links">
                <ul class="list-disc list-outside m-2 ml-6">
                    <li><a href="/George-L-Jackson-Blood-In-My-Eye.pdf" class="text-blue-900">Read Blood In My Eye</a></li>
                    <li><a href="/book-club/BloodInMyEye/bio" class="text-blue-900">Short Biography</a></li>
                </ul>
            </div>
        </div>
    <Footer />
</Header>
<style>
    body {
        background-color: #C14A36;
        font-family: 'Iosevka Web';
    }
    .content {
        background-color: white;
    }
</style>